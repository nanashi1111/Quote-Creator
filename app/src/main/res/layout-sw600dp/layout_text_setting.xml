<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/llTextSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:alpha="0.85"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            style="@style/LatoRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Styling"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="gone"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_horizontal|bottom"
            android:weightSum="11">

            <RelativeLayout
                android:id="@+id/mrlParentBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_text_bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mrlParentItalic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btItalic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_text_italic" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mrlParentUnderline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/ic_text_underline" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mrlParentLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btAlignLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/ic_align_left" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mrlParentCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btAlignCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/ic_align_center" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mrlParentRigth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btAlignRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/ic_align_right" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/mrlTextSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_text_size"
                    android:tint="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mrlTextRotation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btTextRotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_text_rotation"
                    android:tint="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mrlBorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btBorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/ic_border" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mrlSpacing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btSpacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_text_spacing"
                    android:tint="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btPickColorForText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/ic_color_picker" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

